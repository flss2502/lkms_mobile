<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:divider="@drawable/divider_dot"
            android:showDividers="middle">

            <TextView
                android:id="@+id/text_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/purple_500"
                tools:text="10:00" />

            <TextView
                android:id="@+id/text_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@android:color/darker_gray"
                tools:text="12:00" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/purple_500" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/text_equip_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@android:color/black"
                tools:text="Máy ly tâm Eppendorf 5810R" />

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@android:color/darker_gray"
                app:drawableStartCompat="@drawable/ic_account_circle"
                app:drawableTint="@android:color/darker_gray"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="Đặt bởi: Bạn" />

            <TextView
                android:id="@+id/text_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="8sp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@android:color/darker_gray"
                android:textStyle="italic"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Ghi chú: Cần chạy ở 4°C" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>